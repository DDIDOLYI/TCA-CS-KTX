import random

def welcome_message():
    print("Welcome to the Number Guessing Game!")
    print("I'm thinking of a number between your chosen range.")

def get_user_guess():
    while True:
        try:
            guess = int(input("Enter your guess: "))
            return guess
        except ValueError:
            print("Please enter a valid integer.")

def check_guess(guess, secret_number):
    if guess < secret_number:
        print("Too low! Try again.")
    elif guess > secret_number:
        print("Too high! Try again.")
    else:
        print("Congratulations! You guessed it!")

def get_range():
    while True:
        try:
            min_num = int(input("Enter the minimum number: "))
            max_num = int(input("Enter the maximum number: "))
            if min_num < max_num:
                return min_num, max_num
            else:
                print("Minimum must be less than maximum. Try again.")
        except ValueError:
            print("Please enter valid integers.")

def main():
    welcome_message()
    min_num, max_num = get_range()  # 범위 입력받기
    secret_number = random.randint(min_num, max_num)
    attempts = 0

    while True:
        guess = get_user_guess()
        attempts += 1
        check_guess(guess, secret_number)

        if guess == secret_number:
            break

    print(f"You found the number {secret_number} in {attempts} attempts!")

if __name__ == "__main__":
    main()
